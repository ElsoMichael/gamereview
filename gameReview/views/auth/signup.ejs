<body class="background-auth"> 
  <div class="container container-spacing">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 boarder-box">
        <h2 class="text-center">Sign Up!</h2>
        <br>
        <br>
  
        <form action="/signup" method="POST" id="form-container">
  
          <div class="form-group">
            <label for="username">Username</label>
            <input id="username" type="text" class="form-control" name="username" placeholder="Master Chief">
          </div>
          <br>
  
          <div class="form-group">
            <label for="password" >Password</label>
            <input id="password" type="password" class="form-control" name="password" placeholder="Password">
          </div>
          
          <% if (typeof message !== "undefined") { %>
            <div class="form-group">
              <p class="help-block error-message text-center"><%= message %></p>
            </div>
          <% } %>
          <br>
  
          <button type="submit" class="btn btn-default" value="Sign Up">Create account</button>
        </form>
      </div>
    </div>
  </div>
</body>